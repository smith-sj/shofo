  <body>

<header>
    <input type="checkbox" id="menyAvPaa">
    <label id="burger" for="menyAvPaa">
        <div></div>
        <div></div>
        <div></div>
    </label>
  <nav id="meny">
    <span class= "nav-greeting">Hello,<br> Stephen</span>
    <div class ="nav-col">
      <div class="nav-line">
        <div class="nav-row">
          <span class="material-symbols-outlined">
