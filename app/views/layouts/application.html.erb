<!DOCTYPE html>
<html>
  <head>
    <title>Shofo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
  </head>

  

  <body>

<header>
    <input type="checkbox" id="menyAvPaa">
    <label id="burger" for="menyAvPaa" tabindex="0">
        <div></div>
        <div></div>
        <div></div>
    </label>
  <nav id="meny">
    <% if user_signed_in? %>
      <div>
        <span class= "nav-greeting">Hello,</span>
        <span class="nav-greeting nav-username"><%= current_user.first_name %></span>
      </div>
    <% else %>
      <div></div>
    <% end %>
    <div class ="nav-col">
      <div class="nav-line">

        <div class="nav-row">
          <span class="material-symbols-outlined">
            search
          </span>
          <%= link_to 'Browse', browse_path, class:"nav-span" %>
        </div>
      
      <% if user_signed_in? %>
        <div class="nav-row">
          <span class="material-symbols-outlined">
            add
          </span>
          <%= link_to 'Host', host_path, class:"nav-span" %>
        </div>
      
        <div class="nav-row">
          <span class="material-symbols-outlined">
            wallet
          </span>
          <%= link_to 'Wallet', wallet_path, class:"nav-span" %>
        </div>
        
        <div class="nav-row">
          <span class="material-symbols-outlined">
            calendar_month
          </span>
          <%= link_to 'Calendar', calendar_path, class:"nav-span" %>
        </div>
      <% else %>

              <div class="nav-row">
          <span class="material-symbols-outlined">
            info
          </span>
          <%= link_to 'About', about_path, class:"nav-span" %>
        </div>
        
        <div class="nav-row">
          <span class="material-symbols-outlined">
            flag
          </span>
          <%= link_to 'Mission', mission_path, class:"nav-span" %>
        </div>
      
      <% end %>
        
        <div class="line-break"></div>

        <% if user_signed_in? %>
          <%= link_to 'Log Out', destroy_user_session_path, :class => "nav-small-span", method: :delete %>
        <% else %>
          <%= link_to 'Log In', new_user_session_path, :class => "nav-small-span"%>
        <% end %>

        <%= link_to 'Account', edit_user_registration_path, :class => "nav-small-span" %>
        
        <%= link_to 'Help', help_path, :class => "nav-small-span" %>
      </div>
      </div>
      <div class="nav-spacer"></div>
    </nav>
    <%= link_to root_path, :class => "main-logo-div" do %>
      <%= image_tag ("logo.png"), :class => "main-logo" %>
    <% end %>

  </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

    <% if Rails.env.development? %>
      <% console %>
    <% end %>
  </body>
</html>
